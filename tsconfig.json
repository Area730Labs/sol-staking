{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      // "dom",
      // "dom.iterable",
      // "esnext",
      "es2015"
    ],
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    // "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "node"
    ]
  },
  "include": [
    "src",
    "src/idl"
  ]
}